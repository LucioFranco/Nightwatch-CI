#! /usr/bin/env node
var argv = require('minimist')(process.argv.slice(2));
var app = require('../index.js');

var config;

if (argv.c || argv.config) {
  config = require(argv.config);
}else {
  if (!argv.dev)
    argv.dev = false;
  config = {
    createAdmin: argv.createAdmin,
    dev: argv.dev,
    mongoUrl: argv.m || argv.mongo,
    nightwatchConfig: {
      args: ['--group'],
      testPath: process.cwd()
    }
  }
}

app.init(config);
app.start();
